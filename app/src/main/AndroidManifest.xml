<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyectomintic.stockerinv">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/logo_principal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_principal_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StockerInv">
        <activity
            android:name=".views.RutaActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.InventarioActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ElementosActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CategoriasActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockerInv" />
        <activity
            android:name=".views.RegistroActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockerInv" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>